
<div class="container">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Buyer</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% if @current_buyer.present? %>
    <% @current_buyer.each do |f| %>
    <tr>
      <th scope="row"></th>
      <td><%=f.name %></td>
      <td><%= link_to button_tag('Send Invoice', class:"btn btn-primary btn-sm ",style:"background-color: #C84630"),user_subscription_path(f.subscriptions.ids, user_id: f.id) %></td>
      <td><%= link_to button_tag('Show details', class:"btn btn-primary btn-sm ",style:"background-color: #C84630"),user_subscriptions_path( user_id: f.id) %></td>
    </tr>
    <%end %>
  <%else%>
      <span>No User Found</span>
  <% end %>
  </tbody>
</table>
<%= link_to button_tag('Back', class:"btn btn-primary btn-sm ",style:"background-color: #C84630"),plans_path %>
</div>
