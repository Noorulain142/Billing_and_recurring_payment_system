<tr>
  <td><%= feature.name %></td>
  <td><%= feature.code %></td>
  <td><%= feature.unit_price %></td>
  <td><%= feature.max_unit_limit%></td>
  <td><%= feature.usage_value%> </td>
  <td><%= feature.over_use%> </td>
  <% if policy(feature).edit?%>
    <td><%= link_to button_tag("Edit",class:"btn btn-primary btn-sm ",style:"background-color: #C84630"), edit_plan_feature_path(@plan,feature) %></td>
  <%end%>
  <% if policy(feature).destroy?%>
    <td><%= link_to button_tag('Delete', class:"btn btn-primary btn-sm",style:"background-color: #C84630"),[@plan,feature], method: :delete, data: { confirm: 'Are you sure you want to delete this feature?' } %></td>
  <%end%>
  <% if policy(@plan).admin?%>
    <td><%= link_to "Start",plan_inc_count_url(@plan,feature),method: :patch ,class:"btn btn-primary btn-sm",style:"background-color: #C84630"%></td>
  <%end%>
</tr>
